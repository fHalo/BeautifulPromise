<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.beautifulpromise"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name=".application.Intro"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateAlwaysHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- BeautifulPromiseActivity -->
        <!-- feedviewer.PromiseFeedList -->

        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name=".application.feedviewer.PromiseFeedList"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name=".application.addpromise.AddPromiseActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name=".application.feedviewer.PromiseLogList"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name=".application.feedviewer.FeedWithReply"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name=".application.feedviewer.PromiseCheck"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity android:name=".application.checkpromise.CycleCheckActivity"></activity>
        <activity android:name=".application.checkpromise.EtcCheckActivity"></activity>
        <activity android:name=".application.HomeActivity"></activity>
        <activity android:name=".application.BeautifulPromiseActivity"></activity>
        <activity android:name=".application.checkpromise.WorkCheckActivity"></activity>
        <activity android:name=".application.checkpromise.WorkCheckFeedActivity"></activity>
    </application>

</manifest>